@using bds.Models
@model NewsDetailModel

@{
    ViewBag.Title = Model.ChiTiet.TintucName;
}


<div>
    <div class="row">
        <div class="col-md-8 detailnews">
            <div class="contentnews">
                <div class="title">
                    <h3>
                        @Model.ChiTiet.TintucName
                    </h3>
                </div>
                <div class="uptime">
                    Cập nhật: @Convert.ToDateTime(Model.ChiTiet.Updated).ToString("HH:mm dd/MM/yyyy")
                </div>
                <div style="padding:10px">
                    @Html.Raw(@Model.ChiTiet.NoiDung)
                </div>
            </div>

            @Html.Partial("_tinkhac", Model.TinKhac)


        </div>
        <div class="col-md-4">
            <div class="leftdetail">
                @Html.Partial("_tinnoibat", Model.TinNoiBat)
                @Html.Partial("_nhieunguoixem", Model.NhieuNguoiDoc)
            </div>

            @*@Html.Partial("_bannerleft")*@
        </div>
    </div>
</div>

