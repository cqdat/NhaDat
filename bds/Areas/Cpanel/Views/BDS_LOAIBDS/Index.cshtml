@model IEnumerable<bds.Areas.Cpanel.Models.BDS_LOAIBDS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Cpanel/Views/Shared/_Layout.cshtml";
}
<div id="page-heading">
    <h1>Danh mục Loại BDS</h1>
    <div class="options">
        <div class="btn-toolbar">
            <a class="btn btn-success" href="/Cpanel/BDS_LOAIBDS/Create"><i class="fa fa-plus-square-o"></i>Thêm mới</a>

        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container" style="background-color:#ffffff; padding:5px 5px">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Loại Bất Động sản
                </th>
                <th>
                    Số Thứ tự
                </th>

                <th>
                    Hiện thị
                </th>
                
                <th></th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TENBDS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THUTU)
                </td>
                
                <td>
                    @{
                        if (item.HIENTHI == 1)
                        {
                            <img src="/Areas/Cpanel/Images/Check.png" style="cursor:pointer; width:15px;" title="Hiện thị">
                        }
                        if (item.HIENTHI == 0)
                        {
                            <img src="/Areas/Cpanel/Images/disable.png" style="cursor:pointer; width:15px;" title="Ẩn">
                        }
                    }
                    
                </td>
                
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDBDS }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDBDS })
                </td>
            </tr>
        }

    </table>
</div>
    
