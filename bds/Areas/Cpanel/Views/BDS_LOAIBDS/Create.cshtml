@model bds.Areas.Cpanel.Models.BDS_LOAIBDS

@{
    ViewBag.Title = "Thêm Loại BDS";
    Layout = "~/Areas/Cpanel/Views/Shared/_Layout.cshtml";
}
<div id="page-heading">
    <h1>Thêm mới Loại BDS</h1>
    <div class="options">
        <div class="btn-toolbar">
            <a class="btn btn-success" href="/Cpanel/BDS_LOAIBDS/">Quay lại DM LoạiBDS</a>

        </div>
    </div>
</div>
<div class="container" style="background-color:#ffffff; padding:2px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            

            <div class="form-group">
                @Html.Label("Loại BDS", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TENBDS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENBDS, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Số Thứ tự", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.THUTU, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.THUTU, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-8">
                    <label style="font-style:italic; text-align:left" class="control-label col-md-8">Nhập số 1, 2, 3,... theo thứ tự tăng dần</label>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Hiện thị", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    <select class="form-control" id="HIENTHI" name="HIENTHI">
                        <option value="1">Hiện thị</option>
                        <option value="0">Ẩn</option>
                        
                    </select>
                </div>
            </div>

           

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
